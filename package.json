{
  "name": "rest-api-backend",
  "version": "0.0.1",
  "description": "REST API backend for the CashFlow platform",
  "main": "server.js",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "build:watch": "tsc -w",
    "lint:eslint": "npx tslint ./src/**/*.ts"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "git add",
      "eslint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cashflow-dev/rest-api-backend.git"
  },
  "keywords": [
    "typescript",
    "rest",
    "express"
  ],
  "author": "cashflow-dev @ GitHub",
  "license": "GNU GPLv3",
  "bugs": {
    "url": "https://github.com/cashflow-dev/rest-api-backend/issues"
  },
  "homepage": "https://github.com/cashflow-dev/rest-api-backend#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-import": "^2.17.3",
    "prettier": "^1.18.2",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1"
  }
}
